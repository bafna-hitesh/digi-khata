{
  "name": "@digi/services",
  "version": "1.0.0",
  "engines": {
    "node": ">=18"
  },
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev:user && npm run dev:order && npm run dev:dashboard",
    "dev:user": "ts-node servers/user/index.ts",
    "dev:order": "ts-node servers/order/index.ts",
    "dev:dashboard": "ts-node servers/dashboard/index.ts",
    "standalone:user": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/user/index.ts",
    "standalone:order": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/order/index.ts",
    "standalone:dashboard": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/dashboard/index.ts",
    "eslint": "eslint .",
    "test-report": "nyc --reporter=text --reporter=html mocha ./test"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.1",
    "@types/cookie": "^0.5.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/fs-extra": "^11.0.2",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/luxon": "^3.3.2",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.3",
    "chai": "^4.3.10",
    "eslint": "^8.51.0",
    "eslint-config-custom": "*",
    "mocha": "^10.2.0",
    "mock-knex": "^0.4.12",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "package-json-validator": "^0.6.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@digi/brokers": "*",
    "body-parser": "^1.20.2",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.2",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.3.0",
    "sequelize": "^6.33.0",
    "winston": "^3.10.0"
  }
}
