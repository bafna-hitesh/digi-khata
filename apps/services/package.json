{
  "name": "@digi/services",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"yarn dev:user\" \"yarn dev:order\" \"yarn dev:dashboard\"",
    "dev:dashboard": "nodemon --watch servers --ext ts --exec ts-node servers/dashboard/index.ts",
    "dev:order": "nodemon --watch servers --ext ts --exec ts-node servers/order/index.ts",
    "dev:user": "nodemon --watch servers --ext ts --exec ts-node servers/user/index.ts",
    "eslint": "eslint .",
    "standalone:dashboard": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/dashboard/index.ts",
    "standalone:order": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/order/index.ts",
    "standalone:user": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/user/index.ts",
    "test-report": "nyc --reporter=text --reporter=html mocha ./test",
    "update-nginx": "node updateNginxConfig.js"
  },
  "dependencies": {
    "@digi/brokers": "*",
    "@digi/kafka": "*",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.3.0",
    "sequelize": "^6.33.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cookie": "^0.5.3",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/fs-extra": "^11.0.3",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.10",
    "@types/swagger-jsdoc": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-custom": "*",
    "mocha": "^10.2.0",
    "mock-knex": "^0.4.12",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "package-json-validator": "^0.6.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}
