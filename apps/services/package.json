{
  "name": "@digi/services",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Rachit Srivastava",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn dev:user\" \"yarn dev:order\" \"yarn dev:dashboard\" \"yarn dev:validate\"",
    "dev:dashboard": "chmod +x ./servers/dashboardMs/start_dashboard.sh && ./servers/dashboardMs/start_dashboard.sh",
    "dev:kafka": "kafka-server-start /opt/homebrew/etc/kafka/server.properties",
    "dev:order": "nodemon --quiet --watch servers --ext ts --exec ts-node servers/order/index.ts",
    "dev:user": "nodemon --quiet --watch servers --ext ts --exec ts-node servers/user/index.ts",
    "dev:validate": "nodemon --quiet --watch servers --ext ts --exec ts-node servers/validate/index.ts",
    "dev:journal": "nodemon --quiet --watch servers --ext ts --exec ts-node servers/journal/index.ts",
    "dev:zookeper": "zookeeper-server-start /opt/homebrew/etc/kafka/zookeeper.properties",
    "eslint": "eslint .",
    "standalone:dashboard": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/dashboard/index.ts",
    "standalone:order": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/order/index.ts",
    "standalone:user": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/user/index.ts",
    "test-report": "nyc --reporter=text --reporter=html mocha ./test",
    "update-nginx": "node updateNginxConfig.js",
    "add-fake-data": "ts-node test/addFakeData.ts"
  },
  "dependencies": {
    "@digi/brokers": "*",
    "@digi/kafka": "*",
    "@digi/redis": "^1.0.0",
    "aws-sdk": "^2.1536.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.3.0",
    "redis": "^4.6.12",
    "sequelize": "^6.35.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.2",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "chai": "^5.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-custom": "*",
    "mocha": "^10.2.0",
    "mock-knex": "^0.4.13",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "package-json-validator": "^0.6.3",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
