{
  "name": "mono-digi-khata",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "precommit": "lint-staged",
    "commit": "git cz",
    "delete-node:apps": "rm -rf apps/*/node_modules",
    "delete-node:packages": "rm -rf packages/*/node_modules",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "prepare": "husky install && chmod a+x .husky/commit-msg",
    "upgrade": "node updatePackages.js",
    "dev:web": "turbo dev --filter=web"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "package.json": "npx sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "babel-plugin-module-resolver": "^5.0.0",
    "classnames": "^2.5.1",
    "clsx": "^2.1.0",
    "css-loader": "^6.10.0",
    "father": "^4.4.0",
    "jws": "^4.0.0",
    "mini-css-extract-plugin": "^2.8.1",
    "module-alias": "^2.2.3",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.0.1",
    "@commitlint/config-conventional": "^19.0.0",
    "@commitlint/is-ignored": "^19.0.0",
    "@turbo/gen": "^1.12.4",
    "@types/busboy": "^1.5.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.8.0",
    "eslint": "^8.57.0",
    "eslint-config-custom": "*",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.4",
    "stylelint": "^16.2.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "turbo": "^1.12.4"
  },
  "packageManager": "yarn@1.22.21",
  "engines": {
    "node": ">=20.5.0"
  }
}
