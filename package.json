{
  "name": "mono-digi-khata",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "precommit": "lint-staged",
    "commit": "git cz",
    "delete-node:apps": "rm -rf apps/*/node_modules",
    "delete-node:packages": "rm -rf packages/*/node_modules",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "prepare": "husky install && chmod a+x .husky/commit-msg",
    "upgrade": "node updatePackages.js"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "package.json": "npx sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "babel-plugin-module-resolver": "^5.0.0",
    "classnames": "^2.3.2",
    "clsx": "^2.0.0",
    "css-loader": "^6.8.1",
    "father": "^4.3.7",
    "jws": "^4.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "module-alias": "^2.2.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/is-ignored": "^18.4.3",
    "@turbo/gen": "^1.10.16",
    "@types/busboy": "^1.5.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.7.1",
    "eslint": "^8.54.0",
    "eslint-config-custom": "*",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "style-loader": "^3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-order": "^6.0.3",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "turbo": "^1.10.16"
  },
  "packageManager": "yarn@1.22.21",
  "engines": {
    "node": ">=20.5.0"
  }
}
